<!DOCTYPE html>
<html>
  <head>
      <%= csrf_meta_tags %>
      <%= csp_meta_tag %>
      <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header class="navbar bavbar-fixed-top navbar-inverse">
      <div class="body">
        <div class="container">
          <nav class="nav navbar-nav navbar-left">
            <span>Bookers</span>
          </nav>
          <nav>
            <ul class="nav navbar-nav navbar-right">
              <% if user_signed_in? %>
              <li>
                <%= link_to " Home", user_path(current_user), class: "glyphicon glyphicon-user" %>
              </li>
              <li>
                <%= link_to " Users", users_path, class: "glyphicon glyphicon-user" %>
              </li>
              <li>
                <%= link_to " Books", books_path, class: "glyphicon glyphicon-book" %>
              <li>
                <%= link_to " logout", destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out"%>
              </li>
            </ul>
          </nav>
      <% else %>
       <nav class="nav navbar-nav navbar-left">
        <ul class="nav navbar-nav navbar-right">
          <li>
            <%= link_to " Home", root_path, class: "glyphicon glyphicon-home" %>
          </li>
          <li>
            <%= link_to " About", home_about_path, class: "glyphicon glyphicon-link" %>
          </li>
          <li>
            <%= link_to " Sign up", new_user_registration_path, class: "glyphicon glyphicon-edit sign_up" %>
          </li>
          <li>
            <%= link_to " login", new_user_session_path, class: "glyphicon glyphicon-log-in sign_in" %>
          </li>
        <% end %>
        </ul>
      </nav>
    </header>
    <div class="col-lg-3">
    <%= render 'layouts/notifications'%>
    </div>
    <%= yield %>
    <footer>
      <div class="col-xs-3 col-xs-offset-9">
        <p>CopyRight Infratop.inc</p>
      </div>
    </footer>
  </body>
</html>
