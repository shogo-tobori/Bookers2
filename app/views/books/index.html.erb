<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
   </thead>

   <tbody>
    <% @books.each do |book| %>
    <tr>
     <td><%= book.title %></td>
     <td><%= book.body %></td>
     <td><%= link_to 'Show', book_path(book.id) %></td>
    </tr>
    <% end %>
   </tbody>
</table>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved:<br>
  <%= @book.errors.full_messages.each do |message| %>
   <% message %>
  <% end %>
<% end %>


  <%= form_for(@book) do |f| %>
    <h1>New book</h1>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
   <% end %>
